<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
  <div class="form">
    <h4 class="text">Title</h4>
    <%= f.text_field :title %>
  </div>
  <div class="form">
    <h4 class="text">Body</h4>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Update Book' %>

<% end %>