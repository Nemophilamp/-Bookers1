     <link rel="stylesheet" href="/assets//books.sccs">
  </head>


<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
  <div class="form">
    <h4 class="text">Title</h4>
    <div class="form_title"><%= f.text_field :title %></div>
  </div>
  <div class="form">
    <h4 class="text">Body</h4>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Update Book' %>
  
    <p class="float">
    <%= link_to "Show", edit_book_path(@book.id) %>
     | 
    <%= link_to "Back", "/books" %>
  </p>

<% end %>