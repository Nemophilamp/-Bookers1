     <link rel="stylesheet" href="/assets//books.sccs">
  </head>


<h1>Editing Book</h1>
  <% if @book.errors.any? %>
    <div class="error_message">
    <div><%= @book.errors.count %> errors prohibited this book from being saved:</div>
      <ul><% @book.errors.full_messages.each do |message| %>
        <li><%= message %><br></li>
          <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with model: @book do |f| %>
  <div class="form">
    <h4 class="text">Title</h4>
    <div class="form_title"><%= f.text_field :title %></div>
  </div>
  <div class="form">
    <h4 class="text">Body</h4>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Update Book' %>

    <p class="float">
    <%= link_to "Show", book_path(@book.id) %>
     |
    <%= link_to "Back", "/books" %>
  </p>

<% end %>