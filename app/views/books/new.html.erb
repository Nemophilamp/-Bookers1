<h1>New book</h1>
<!--form_with部分-->
<%= form_with model: @book, url:'/new', method: :post do |f| %>
<!--バリデーション/エラーメッセージ-->
<!--日本語化はしない-->
<% if @book.errors.any? %>
  <div><%= @book.errors.count %></div>
  <% @book.full_message.each do |message| %>
    <div><%= message %></div>
  <% end %>
<% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
