<h2>New book</h2>
<!--バリデーション/エラーメッセージ-->
<!--日本語化はしない-->
<% if @book.errors.any? %>
  <div><%= @book.errors.count %> errors prohibited this book from being saved:</div>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %><br><li>
  <% end %>
<% end %>

<!--form_with部分-->
<%= form_with model: @book, url:'/books' do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
