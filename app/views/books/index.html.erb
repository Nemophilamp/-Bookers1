  <head>
     <link rel="stylesheet" href="/assets/books.sccs">
  </head>

  <body>
    <p id="notice">
      <%= flash[:notice] %>
    </p>
    <h1>Books</h1>
    <!--テーブルタグ-->
    <!--３列-->
    <!--１行目 見出し：thタグ, Title, Body, 水平方向に連結：colspan３-->
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy", book_path(book.id),  method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    
    <h2>New book</h2>
    <div class="New_book">
    <!--バリデーション/エラーメッセージ-->
    <!--日本語化はしない-->
        <% if @book.errors.any? %>
         <div class="error_message">
         <div><%= @book.errors.count %> errors prohibited this book from being saved:</div>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %><br><li>
          <% end %>
        <% end %>
            </div>
    
    <!--form_with部分-->
    <!--New  bookと、タイトル、ボディに隙間がほしい-->
    <%= form_with model: @book, url:'/books' do |f| %>
    <div class="form">
      <h4 class="text">Title</h4>
      <%= f.text_field :title %>
    </div>
    <div class="form">
      <h4 class="text">Body</h4>
      <%= f.text_area :body %><br>
    </div>
      <%= f.submit 'Create Book' %>
    <% end %>
    </div>
  </body>
</html>